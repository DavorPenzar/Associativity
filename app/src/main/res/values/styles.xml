<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@android:color/white</item>
    </style>
    
    <style name="ClosedCellButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/closed_cell_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="ClosedColumnButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/closed_column_button</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ClosedSolutionButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/closed_solution_button</item>
        <item name="android:textColor">@android:color/white</item>
    </style>
</resources>
