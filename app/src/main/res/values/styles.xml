<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="AssociationsAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="android:colorSecondary">@color/colorSecondary</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
    </style>

    <!-- Style of the box with the title. -->
    <style name="AppTitle">
        <item name="android:layout_marginStart">@dimen/spacing_normal</item>
        <item name="android:layout_marginTop">@dimen/spacing_huge</item>
        <item name="android:layout_marginEnd">@dimen/spacing_normal</item>
        <item name="android:layout_marginBottom">@dimen/spacing_large</item>
        <item name="android:background">@drawable/app_title</item>
    </style>

    <!-- Style of the title. -->
    <style name="Title" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">@dimen/spacing_large</item>
        <item name="android:paddingTop">@dimen/spacing_normal</item>
        <item name="android:paddingEnd">@dimen/spacing_large</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:textColor">@color/dark_scarlet</item>
        <item name="android:textSize">@dimen/title_size</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- Style of the description. -->
    <style name="Description" parent="Widget.AppCompat.TextView">
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingEnd">@dimen/spacing_small</item>
        <item name="android:paddingBottom">@dimen/spacing_normal</item>
        <item name="android:textColor">@color/bdazzled_blue_pastel</item>
        <item name="android:textSize">@dimen/subtitle_size</item>
        <item name="android:textStyle">italic</item>
    </style>

    <!-- Style of the stopwatch. -->
    <style name="Stopwatch">
        <item name="android:padding">@dimen/spacing_small</item>
    </style>

    <!-- Style of the display of current text. -->
    <style name="CurrentTextDisplay" parent="Widget.AppCompat.TextView">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:background">@drawable/current_text_display</item>
        <item name="android:paddingStart">@dimen/spacing_normal</item>
        <item name="android:paddingTop">@dimen/spacing_small</item>
        <item name="android:paddingEnd">@dimen/spacing_normal</item>
        <item name="android:paddingBottom">@dimen/spacing_small</item>
        <item name="android:textColor">@color/dark_scarlet</item>
    </style>

    <!-- Style of the game table. -->
    <style name="GameTable">
        <item name="android:padding">@dimen/border_width_thin</item>
    </style>

    <!-- Style of buttons of the game table. -->
    <style name="GameTableButton" parent="Widget.AppCompat.Button">
        <item name="android:layout_margin">@dimen/border_width_thin</item>
        <item name="android:padding">@dimen/spacing_tiny</item>
        <item name="android:textColor">@color/baby_powder</item>
    </style>

    <!-- Style of cells' buttons. -->
    <style name="ClosedCellButton" parent="GameTableButton">
        <item name="android:background">@drawable/closed_cell_button</item>
    </style>

    <!-- Style of columns' solutions' buttons. -->
    <style name="ClosedColumnButton" parent="GameTableButton">
        <item name="android:background">@drawable/closed_column_button</item>
    </style>

    <!-- Style of the final solution's button. -->
    <style name="ClosedSolutionButton" parent="GameTableButton">
        <item name="android:background">@drawable/closed_solution_button</item>
    </style>

    <!-- Style of the guess dialog. -->
    <style name="GuessDialog">
        <item name="android:layout_margin">@dimen/spacing_small</item>
        <item name="android:background">@drawable/guess_dialog</item>
        <item name="android:padding">@dimen/spacing_normal</item>
    </style>
</resources>
